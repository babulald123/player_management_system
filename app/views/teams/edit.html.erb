<div class="card text-center">
  <div class="card-header">
    <h1> Edit Profile </h1>
    <%= form_for(current_user, html: { multipart: true }) do |f| %>
    	<div class="form-group">
        <h4><%= f.label :name %>:-
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %></h4>
      </div>
      <div class="form-group">
        <h4><%= f.label :body %>:-
        <%= f.text_field :body %></h4>
      </div>
      <div class="form-group">
        <h4><%= f.label :amount %>:-
        <%= f.number_field :amount %></h4>
      </div>
      <div class="form-group button">
        <%= f.file_field :avatar  %>
      </div>
      <div class="form-group">
    	  <%= f.submit "update profile", class: "btn btn-primary" %>
    	</div>
    <% end %>
  </div>
</div>
